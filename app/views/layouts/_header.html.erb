<header class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-inner" style="flex-flow: row nowrap; align-items: stretch; width: 100%; height: 50px;">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample8">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/posts" style="margin-left: 48px"></a>
      </div>
      <div class="collapse navbar-collapse" id="navbarEexample8">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to "プロフィール変更", edit_user_registration_path %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} %></li>
            <li><%= link_to "投稿する", new_post_path %></li>
            <li><%= link_to "投稿一覧", posts_path %></li>
            <li><%= link_to "マイページ", user_path(current_user) %></li>
          <% elsif admin_signed_in? %>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} %></li>
            <li><%= link_to "ユーザー一覧", users_path %></li>
          <% else %>
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
            <li><%= link_to "管理者ログイン", new_admin_session_path %></li>
            <li><%= link_to "投稿一覧", posts_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
