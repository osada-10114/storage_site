<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post name</th>
      <th>Total price</th>
      <th>Explanation</th>
      <th>Category</th>
      <th>Material</th>
      <th>Material quantity</th>
      <th>Tip</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.post_name, post_path(post) %></td>
        <td><%= post.total_price %></td>
        <td><%= post.explanation %></td>
        <td><%= post.category %></td>
        <td><%= post.material %></td>
        <td><%= post.material_quantity %></td>
        <td><%= post.tip %></td>
        <td><%= post.reason %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
