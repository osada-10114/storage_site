    display: inline-block;
    position: absolute;
    top: 22px;
    left: 350px;
  }

  .horizonal-separator {
    border-top: 1px solid #cfcfcf;
    margin: 16px 25px 40px 0;
  }

  #images_show .content h2.headline-title {
    font-size: 20px;
    padding-bottom: 8px;
    border-bottom: 1px solid #cfcfcf;
    margin: 0;
    font-weight: bold;
  }

  #images_show .content h3.headline-title {
    font-size: 15px;
