<% provide(:title, "新規会員登録") %>
<% breadcrumb :new_user %>
<div id="registrations_new" class="bg_color01">
  <div class="registration-new-inner">
    <h2 class="page-title">新規会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="input-items">
        <div class="text-labeled-input">
          <span class="label color_03">ニックネーム</span>
          <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "input" %>
        </div>
        <div class="text-labeled-input">
          <span class="label color_03">メールアドレス</span>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "input" %>
        </div>
        <div class="text-labeled-input">
          <span class="label color_03">パスワード</span>
          <%= f.password_field :password, autocomplete: "off", placeholder: "8文字以上の半角英数字", class: "input" %>
        </div>
        <div class="text-labeled-input">
          <span class="label color_03">パスワード（確認）</span>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード（確認）", class: "input" %>
        </div>
        <button class="dly-button-root action-button primary color_01">
          <%= f.submit "会員登録する", class: "dly-button-content bg_color02" %>
        </button>
      </div>
    <% end %>
  </div>
</div>