<% provide(:title, "ログイン") %>
<% breadcrumb :session_user %>
<div id="sessions_new" class="bg_color01">
  <div class="session-new-inner">
    <h2 class="page-title">ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-items">
        <div class="text-labeled-input">
          <span class="label color_03">ニックネーム</span>
          <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "input" %>
        </div>
        <div class="text-labeled-input">
          <span class="label color_03">パスワード</span>
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "input" %>
        </div>
        <button class="dly-button-root action-button primary color_01">
          <%= f.submit "ログイン", class: "dly-button-content bg_color02" %>
        </button>
      </div>
    <% end %>
  </div>
</div>